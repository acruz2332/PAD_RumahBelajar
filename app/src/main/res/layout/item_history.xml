<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvHist"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="20dp"
                android:text="Nama"
                android:textColor="@color/biru_tua2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistBenar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="20dp"
                android:text="Nilai"
                android:textColor="@color/biru_tua2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvHistSalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="20dp"
                android:text="Salah"
                android:textColor="@color/biru_tua2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvHistKosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="20dp"
                android:text="Kosong"
                android:textColor="@color/biru_tua2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvHistNilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="20dp"
                android:text="Nilai"
                android:textColor="@color/biru_tua2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvHistPercobaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="20dp"
                android:text="percobaan"
                android:textColor="@color/biru_tua2"
                android:textSize="15dp" />




        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>